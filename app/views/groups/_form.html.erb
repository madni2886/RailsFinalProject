
<%= form_for [current_user,@group] do |f| %>
  <div class="form-group">
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title ,class:"form-control",placeholder:"Title of article",autofocus:true%>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.label :group_type%><br/>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :group_type,class:"form-control",placeholder:"type of group" %>
      </div>
    </div>
  </div>
  </div>

  <div class="center">
    <%= f.submit class:'btn btn-primary btn-lg' %>
  </div>
<% end %>
